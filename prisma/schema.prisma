generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String
  role     String
  product  Product[]
}

model Product {
  id               Int       @id @default(autoincrement())
  brand            String
  model            String
  VoWiFi           Boolean
  RAMCapacity      String
  OSVersion        String
  NumberOfSIMCards Int
  FrontCamera      String
  BuiltInMemory    String
  MainCamera       String
  author           UserModel @relation(fields: [added], references: [id])
  added            Int
  quantity         Int   @default(0)
}
